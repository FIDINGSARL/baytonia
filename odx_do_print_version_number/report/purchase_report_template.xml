<odoo>
    <data>
        <template id="report_purchaseorder_document_version_number" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//t/div/div/div[hasclass('col-xs-6')]" position="inside">
                <br/>
                <div class="col-xs-6">
                    <span>
                        <strong>Version :
                            <span t-esc="o.update_version_number()"/>
                        </strong>
                    </span>
                </div>
            </xpath>
        </template>
        <template id="report_purchasequotation_document_version_number" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//t/div/div/div[hasclass('col-xs-6')]" position="inside">
                <br/>
                <div class="col-xs-6">
                    <span>
                        <strong>Version :
                            <span t-esc="o.update_version_number_rfq()"/>
                        </strong>
                    </span>
                </div>
            </xpath>
        </template>
    </data>
</odoo>

