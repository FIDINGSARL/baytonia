<odoo>
    <record model="ir.ui.view" id="sale_order_moyasar_form_view">
        <field name="name">sale.order.moyasar.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(eg_moyasar_payment.action_moyasar_payment)d" type="action"
                        class="oe_highlight" string="Send Payment URL (Moyasar)"/>
            </xpath>
        </field>
    </record>
</odoo>