<odoo>
    <record model="ir.ui.view" id="website_support_template_form_view">
        <field name="name">website.support.template.form.view</field>
        <field name="model">website.support.ticket</field>
        <field name="inherit_id" ref="website_support.website_support_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(eg_template_integration.action_template_integration_wizard)d" type="action"
                        string="Send SMS" class="oe_highlight" />
            </xpath>
        </field>
    </record>
</odoo>