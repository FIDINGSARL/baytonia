<odoo>
    <record model="ir.ui.view" id="config_settings_extended_form_view">
        <field name="name">config.settings.extended.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-string='Inventory']" position="inside">
                <h2>Email Address</h2>
                <div class="row mt16 o_settings_container" id="velocity_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Email Address</span>
                            <div class="text-muted">
                                <field name="email_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>