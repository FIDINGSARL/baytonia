<odoo>
    <record id="sale_order_form_inherited_clex_delivery" model="ir.ui.view">
        <field name="name">sale.order.form.inherited.clex.delivery</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="clex_delivery_return_send_shipping" type="object" string="Return Clex Label"
                        class="oe_highlight"/>
                <button name="clex_delivery_send_return_label_to_customer" type="object" string="Send Clex Label"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>